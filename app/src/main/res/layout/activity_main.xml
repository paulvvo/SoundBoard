<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sleepy.soundboard.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:rowCount="4"
        android:columnCount="2">

        <Button
            android:text="Dog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dogButton"
            android:onClick="playSound"
            android:tag="0"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill" />

        <Button
            android:text="Marbles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/marbleButton"
            android:onClick="playSound"
            android:tag="4"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="Hyena"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hyenaButton"
            android:onClick="playSound"
            android:tag="1"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="Saw Wood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sawButton"
            android:onClick="playSound"
            android:tag="5"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="Ice Cubes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iceCubeButton"
            android:onClick="playSound"
            android:tag="2"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="Slot Machine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/slotMachineButton"
            android:onClick="playSound"
            android:tag="6"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="Ice Skate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iceSkateButton"
            android:onClick="playSound"
            android:tag="3"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>

        <Button
            android:text="Train"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/trainButton"
            android:onClick="playSound"
            android:tag="7"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"/>
    </GridLayout>
</RelativeLayout>
